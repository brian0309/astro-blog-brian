---
import BaseLayout from '../layouts/BaseLayout.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';
import HoverEffects from '../components/effects/HoverEffects';
---

<BaseLayout title={SITE_TITLE} description={SITE_DESCRIPTION}>
	<HoverEffects client:load slot="effects" />
	<main class="h-[75vh] flex items-center justify-center px-4 relative">
		<div class="w-full max-w-6xl mx-auto flex flex-col md:flex-row items-center gap-5">
			<div class="md:w-1/2">
				<p class="text-lightGray text-base uppercase tracking-widest mb-4">HEY THERE!</p>
				<h1 class="text-primary text-4xl font-bold uppercase mb-4 leading-tight md:text-7xl">I AM BRIAN</h1>
				<p class="text-softGray text-xl uppercase tracking-wider mb-8">Tech Generalist Freelancer</p>
				<button class="bg-blue-pink-gradient text-white px-6 py-3 rounded-md uppercase font-medium tracking-wider">
					SEE MY WORK
				</button>
				<div class="flex gap-3 mt-12">
					<!-- Social icons would go here -->
				</div>
			</div>
			<div class="md:w-1/2">
				<img 
					src="/blog-placeholder-1.jpg" 
					alt="Jo Breed" 
					class="w-full h-auto rounded-lg shadow-xl"
				/>
			</div>
		</div>
	</main>
</BaseLayout>
