---
import BaseLayout from '../layouts/BaseLayout.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';
import HoverEffects from '../components/effects/HoverEffects';
---

<BaseLayout title={SITE_TITLE} description={SITE_DESCRIPTION}>
	<HoverEffects client:load slot="effects" />
	<main class="h-[70vh] flex items-start md:items-center px-4 sm:px-6 md:px-8 relative">
		<div class="w-full flex flex-col md:flex-row items-start md:items-center gap-5 pt-8 md:pt-0">
<div class="w-full md:w-1/2 pl-4 md:pl-0">
<p class="text-lightGray text-lg sm:text-xl uppercase tracking-widest mb-4">HEY THERE!</p>
<h1 class="text-primary text-5xl sm:text-6xl font-bold uppercase mb-4 leading-tight md:text-7xl">I AM BRIAN</h1>
<p class="text-softGray text-2xl sm:text-3xl uppercase tracking-wider mb-8">Your Techy Freelancer</p>
				<button class="bg-blue-pink-gradient text-white px-6 py-3 rounded-md uppercase font-medium tracking-wider">
					SEE MY WORK
				</button>
				<div class="flex gap-3 mt-12">
					<!-- Social icons would go here -->
				</div>
			</div>
			<div class="w-full md:w-1/2 mt-8 md:mt-0">
				<img 
					src="/blog-placeholder-1.jpg" 
					alt="Jo Breed" 
					class="w-full h-auto rounded-lg shadow-xl"
				/>
			</div>
		</div>
	</main>
</BaseLayout>
